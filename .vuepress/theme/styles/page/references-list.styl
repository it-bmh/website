.references-row
  width 100%
  display flex
  justify-content center
  margin-bottom 30px

.references-row > .reference:nth-of-type(even)
  margin-left 30px

.references-row > .reference:only-child
  margin-right 445px + 30px + 32px

@media (max-width: 980px)
  .references-row > .reference:only-child
    margin-right 0