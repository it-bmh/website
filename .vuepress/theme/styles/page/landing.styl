//.frontpage
//  & h1, & h2, & h3, & h4, & h5, & h6, & p
h1, h2, h3, h4, h5, h6, p
  margin 0
  padding 0
  border 0

.frontpage__header
  height 451px
  background #00027D
  padding-top 3rem
  display flex
  flex auto
  justify-content center
  margin-bottom 2rem

.frontpage__header__content
  position relative
  display flex
  flex auto
  flex-flow column
  max-width $pageMaxWidth

.frontpage__header__jsme-specialiste
  height 179px
  width 510px
  color #FFFFFF
  font-family Cabin
  font-weight 400
  font-size 3rem
  letter-spacing 0.11px
  line-height 60px
  margin-top 2.5rem
  margin-bottom 1rem

.frontpage__header__uz-temer-30-let
  height 96px
  width 475px
  color #FFFFFF
  font-family Cabin
  font-weight 400
  font-size 1rem
  letter-spacing 0.5px
  line-height 1.5rem
  margin-bottom 2rem

.frontpage__header__button--kontaktujte-nas
  display flex
  justify-content center
  align-items center
  height 48px
  width 195px
  border-radius 5px
  background-color $redColor
  color #ffffff
  text-transform uppercase

  font-family Cabin
  font-size 1rem
  font-weight 700
  letter-spacing 0.06px
  line-height 1.5rem

  transition all 500ms

  &:hover
    background-color #ffffff
    color $redColor

.frontpage__header__img
  position absolute
  border-top-left-radius $imageCornerRadius
  border-bottom-left-radius $imageCornerRadius
  right -12rem
  bottom -2rem

.frontpage__content
  display flex
  flex-flow column
  align-items center

.section--narrow
  display flex
  flex auto
  flex-flow column
  width 100%
  max-width $pageMaxWidth
  padding 2rem 0

.section--wide
  width 100%
  padding 1.5rem 0
  display flex
  flex-flow column
  align-items: center

.section--gray
  background-color #F2F2F2

.section__subtitle
  margin 0
  color $redColor
  font-family Cabin
  font-size 1rem
  letter-spacing 2px
  line-height 3rem

.section__title
  color: #00027D
  font-family Cabin

.title--big
  font-size 3.75rem
  font-weight 700
  letter-spacing 0.13px
  line-height 4.5rem

.title--small
  font-size 1rem
  font-weight 500
  letter-spacing 2px
  line-height 1.5rem
  text-align center
  text-transform uppercase

.header--default
  margin-bottom 2.25rem

.header--small
  margin-bottom 1.125rem

.section__info-box
  display flex
  flex-flow row
  align-items center

.section__info-box__text-box
  display flex
  flex-flow column
  border-radius $boxesRadius
  padding 2rem 6rem
  background-color $accentColor
  color $whiteColor
  max-width 570px

.info-box__text-box__title
  color $whiteColor
  font-weight 600
  font-size 1.5rem
  letter-spacing 0.05px
  line-height 28px
  margin-bottom 1.75rem

.info-box__text-box__content
  color $whiteColor
  font-size 1rem
  letter-spacing 0.5px
  line-height 1.5rem
  margin-bottom 1.75rem

.section__info-box__img
  border-radius $imageCornerRadius
  width 505px
  height 303px
  margin-right -2.25rem
  margin-left 4rem
  z-index 1

.why-boxes
  display flex
  flex-flow row
  align-items center
  justify-content center
  flex-wrap wrap
  max-width $pageMaxWidth

.why-box
  display flex
  flex-flow column
  justify-content flex-start
  align-items center
  width 190px
  height 228px
  margin 2rem

.why-box__img-box
  display flex
  justify-content center
  align-items center
  width 5.2rem
  height 5.2rem
  margin-bottom 0.8rem

.why-box__title
  color #00027D
  font-size 0.875rem
  font-weight 700
  letter-spacing 0.44px
  line-height 1.125rem
  text-align center
  text-transform uppercase
  margin-bottom 0.75rem

.why-box__text
  color #000000
  font-size 0.875rem
  letter-spacing 0.44px
  line-height 1.125rem
  text-align center

.service-link
  display flex
  flex-flow row
  justify-content flex-end
  position relative
  margin-bottom 6rem

.service-link__header
  position absolute
  display flex
  

.service-link--image-left .service-link__header
  top 0
  left 0
  order 1

.service-link--image-right .service-link__header
  top 0
  right 0
  order 3

.service-link__img
  position relative
  z-index 1
  order 2

.service-link--image-left .service-link__img
  top 2.25rem
  left 1.8rem

.service-link--image-right .service-link__img
  top 2.25rem
  right 1.8rem

.service-link__title
  color #F2F2F2
  font-size 2.5rem
  font-weight 700
  text-transform uppercase
  letter-spacing 0.01px
  display inline-block
  position relative

.service-link--image-left .service-link__title
  transform rotate(270deg)
  transform-origin center 147px
  top 2.25rem
  left 4rem

.service-link--image-right .service-link__title
  transform rotate(90deg)
  transform-origin center 120px
  top 4.8rem
  right 0.5rem

.service-link__content
  box-sizing border-box
  border-radius 5px
  padding 1.5rem 1.5rem 1.5rem 7.5rem

.service-link--image-left .service-link__content
  order 3

.service-link--image-right .service-link__content
  order 1

.service-link__content.service-link--kanalizace
  height 300px
  width 570px

.service-link__content.service-link--vodovody
  height 324px
  width 570px

.service-link__content__header
  font-weight 600
  font-size 30px
  letter-spacing 0.07px
  line-height 48px
  margin-bottom 0.75rem

.service-link__content__text
  font-size 1rem
  letter-spacing 0.5px
  line-height 1.5rem
  margin-bottom 2.25rem
  max-width 380px

.service-link__content__cta
  display inline-flex
  justify-content center
  align-items center
  height 48px
  width 190px
  border-radius 5px
  font-size 1rem
  font-weight 700
  letter-spacing 0.06px
  line-height 1.5rem
  text-transform uppercase
  cursor pointer

.service-link--white .service-link__content
  background-color #ffffff
  border 2px solid #F2F2F2

.service-link--white .service-link__content__header
  color #000000

.service-link--white .service-link__content__text
  color #121212

.service-link--white .service-link__content__cta
  color #000000
  border 2px solid #FF3037

.service-link--blue .service-link__content
  background-color #00027D
  border 2px solid #00027D

.service-link--blue .service-link__content__header
  color #ffffff
.service-link--blue .service-link__content__text
  color #ffffff

.service-link--blue .service-link__content__cta
  color #ffffff
  border 2px solid #ffffff
