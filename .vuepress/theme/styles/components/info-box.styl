$infoBoxWidth = 69.375rem

$infoBoxImageBigHeight = 22.5rem
$infoBoxImageSmallHeight = 18.75rem
$infoBoxImageTopMargin = 2.25rem
$infoBoxImageWidth = 31.5625rem
$infoBoxImageOverlap = 1.875rem

$infoBoxHeaderHeight = 3.125rem

$infoBoxContentWidth = 35.625rem
$infoBoxContentHorizontalPadding = 5.8rem
$infoBoxContentVerticalPadding = 2.5rem

.info-box
  width $infoBoxWidth
  height auto

@media (max-width: 1180px)
  .info-box
    width auto

.info-box:not(:first-of-type)
  margin-top 4.5rem

.info-box:last-of-type
  margin-bottom 4.5rem

@media only screen and (max-width : 414px)
  .info-box:not(:first-of-type)
    margin-top 0.5rem

  .info-box:last-of-type
    margin-bottom 0.5rem

.info-box *
  box-sizing border-box

.info-box__content
  width $infoBoxContentWidth
  height auto

@media only screen and (max-width : 414px)
  .info-box__content
    width 100%

.info-box h6.info-box__content__date
  font-weight 500
  font-size 16px
  line-height 24px
  margin-bottom 12px

.info-box__img
  width $infoBoxImageWidth
  height auto
  border-radius $imageCornerRadius

@media only screen and (max-width : 414px)
  .info-box__img
    border-radius unset
    margin-top 0

.info-box
  display flex
  align-items flex-start
  justify-content flex-end

.info-box
  position relative

.info-box__header
  position absolute

.info-box__img
  position relative

.info-box__img
  z-index 1

.info-box__header,
.info-box__content
  z-index 0

.info-box__img
  margin-top $infoBoxImageTopMargin

@media only screen and (max-width : 414px)
  .info-box__img
    margin-top 8px
    width 100%
    max-width 100%

.info-box__title
  color #F2F2F2
  font-size 2.5rem
  font-weight 700
  text-transform uppercase
  letter-spacing 0.01px
  display inline-flex
  justify-content center
  margin 0
  transform-origin center center
  transform scale(-1, -1) 
  height $infoBoxHeaderHeight

.info-box--image-big .info-box__title
  width ($infoBoxImageBigHeight - $infoBoxHeaderHeight)


.info-box--image-small .info-box__title
  width ($infoBoxImageSmallHeight - $infoBoxHeaderHeight)

.info-box__content
  border-radius $boxesRadius
  padding $infoBoxContentVerticalPadding $infoBoxContentHorizontalPadding

@media only screen and (max-width : 414px)
  .info-box__content
    padding 32px 16px
    border-radius unset

.info-box__content__header
  font-family Cabin
  font-weight 600
  letter-spacing 0.07px
  line-height 3rem
  margin-bottom 0.75rem

.info-box--dense-header .info-box__content__header
  font-size 1.5rem
  line-height 1.75rem

.info-box--extended-header .info-box__content__header
  margin-right -3rem

@media only screen and (max-width : 414px)
  .info-box--extended-header .info-box__content__header
    margin-right 0
    line-height 2rem

.info-box__content__text
  font-family Cabin
  font-size 1rem
  letter-spacing 0.5px
  line-height 1.5rem
  margin-top 11px

.info-box--dense-header .info-box__content__text
  margin-top 30px

h4.info-box__content__header
  font-size 1.875rem

h5.info-box__content__header
  font-size 1.5rem

.info-box
  h1, h2, h3, h4, h5, h6
    margin 0

//IMAGE RIGTH
.info-box.info-box--image-right
  flex-flow row-reverse

@media (max-width: 1180px)
  .info-box.info-box--image-right
    flex-flow column
    align-items center

.info-box--image-right .info-box__img
  right $infoBoxImageOverlap

@media (max-width: 1180px)
  .info-box--image-right .info-box__img
    bottom -1rem
    right 0

.info-box--image-right .info-box__header
  transform-origin bottom right
  transform rotate(270deg)
  right 2.4rem
  top ($infoBoxImageTopMargin - $infoBoxHeaderHeight)

//IMAGE LEFT
.info-box.info-box--image-left
  flex-flow row

@media (max-width: 1180px)
  .info-box.info-box--image-left
    flex-flow column
    align-items center

.info-box--image-left .info-box__img
  left $infoBoxImageOverlap

@media (max-width: 1180px)
  .info-box--image-left .info-box__img
    bottom -1rem
    left 0

.info-box--image-left .info-box__header
  transform-origin bottom left
  transform rotate(90deg)
  left 2.4rem
  top ($infoBoxImageTopMargin - $infoBoxHeaderHeight)

//BLUE
.info-box--blue .info-box__content
  background-color $accentColor
  color $whiteColor

.info-box--blue .info-box__content__date
  color $whiteColor

//WHITE
.info-box--white .info-box__content
  background-color $whiteColor
  color $textColor
  border 1px solid $shadeColor

.info-box--white .info-box__content__date
  color $accentLightColor

.info-box .button
  margin-top 24px