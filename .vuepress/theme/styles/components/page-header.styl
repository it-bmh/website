.page-header
  width 100%
  display flex
  flex-flow column
  margin 2.25rem 0

.page-header
  h1, h2, h3, h4, h5, h6
    margin 0

.page-header--centered
  align-items center

h1.page-header__title
  color #121212
  font-family Cabin
  font-weight 500
  font-size 3rem
  letter-spacing 0.11px
  line-height 4.5rem

h2.page-header__subtitle
  color $redColor
  font-family Cabin
  font-weight 500
  font-size 1rem
  letter-spacing 2px
  line-height 1.5rem
  text-transform uppercase