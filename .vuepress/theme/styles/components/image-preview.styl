.image-preview
  display flex
  flex-flow row
  justify-content center

.image-preview__content
  display flex
  flex-flow row
  justify-content space-between
  align-items flex-start
  width 100%
  max-width 920px
  box-sizing border-box

.image-preview__img
  border-radius $imageCornerRadius
  max-width 100vw

.image-preview--double .image-preview__img
  max-width 445px
  width calc(50% - 1.875rem)
  border-radius $imageCornerRadius

.image-preview--double .image-preview__img:first-of-type
  margin-right 1.875rem

.image-preview--single,
.image-preview--double
  margin-bottom 1.875rem

@media only screen and (max-width : 414px)
  .image-preview__img
    border-radius 0

  .image-preview--double .image-preview__img
    max-width 445px
    width calc(50% - 0.5rem)
    border-radius 0
  
  .image-preview--double .image-preview__img:first-of-type
    margin-right 0.5rem

  .image-preview--single,
  .image-preview--double
    margin-bottom 0.5rem